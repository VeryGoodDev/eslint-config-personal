{
  "name": "eslint-config-personal",
  "version": "1.0.0",
  "description": "Personal preferences for eslint",
  "repository": "https://github.com/verygooddev/eslint-config-personal",
  "author": "VeryGoodDev <very_good_dev@outlook.com>",
  "license": "MIT",
  "exports": {
    ".": null,
    "./browser-js": "./configs/browser-js.js",
    "./browser-ts": "./configs/browser-ts.js",
    "./jest-js": "./configs/jest-js.js",
    "./jest-ts": "./configs/jest-ts.js",
    "./node-js": "./configs/node-js.js",
    "./node-ts": "./configs/node-ts.js",
    "./preact-js": "./configs/preact-js.js",
    "./preact-ts": "./configs/preact-ts.js",
    "./react-js": "./configs/react-js.js",
    "./react-ts": "./configs/react-ts.js"
  },
  "scripts": {
    "lint": "eslint ./test/*"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "eslint": "^8.13.0"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "./configs/**/*.js"
        ],
        "extends": "./configs/node-js.js",
        "rules": {
          "id-length": "off",
          "max-lines": "off",
          "no-magic-numbers": "off",
          "sort-keys": "off",

          "import/no-commonjs": "off"
        }
      },
      {
        "files": [
          "./test/browser-js.js"
        ],
        "extends": "./configs/browser-js.js"
      },
      {
        "files": [
          "./test/browser-ts.js"
        ],
        "extends": "./configs/browser-ts.js"
      },
      {
        "files": [
          "./test/jest-js.js"
        ],
        "extends": "./configs/jest-js.js"
      },
      {
        "files": [
          "./test/jest-ts.js"
        ],
        "extends": "./configs/jest-ts.js"
      },
      {
        "files": [
          "./test/node-js.js"
        ],
        "extends": "./configs/node-js.js"
      },
      {
        "files": [
          "./test/node-ts.js"
        ],
        "extends": "./configs/node-ts.js"
      },
      {
        "files": [
          "./test/preact-js.js"
        ],
        "extends": "./configs/preact-js.js"
      },
      {
        "files": [
          "./test/preact-ts.js"
        ],
        "extends": "./configs/preact-ts.js"
      },
      {
        "files": [
          "./test/react-js.js"
        ],
        "extends": "./configs/react-js.js"
      },
      {
        "files": [
          "./test/react-ts.js"
        ],
        "extends": "./configs/react-ts.js"
      }
    ]
  }
}
